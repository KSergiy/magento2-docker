#!/bin/bash
[ -z "$1" ] && echo "Please specify a directory or file to copy to container (ex. vendor, --all)" && exit

if [ "$1" == "--all" ]; then
  docker cp ./../html/./ $(docker-compose ps -q phpfpm|awk '{print $1}'):/var/www/html/project/
  echo "Completed copying all files from host to container"
  bin/fixowns
  bin/fixperms
else
  docker cp ./../html/$1 $(docker-compose ps -q phpfpm|awk '{print $1}'):/var/www/html/project/$1
  echo "Completed copying $1 from host to container"
  bin/fixowns $1
  bin/fixperms $1
fi